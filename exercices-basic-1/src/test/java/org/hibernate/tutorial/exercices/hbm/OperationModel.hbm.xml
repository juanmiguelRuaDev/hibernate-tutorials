<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.hibernate.tutorial.exercices.hbm">
<class name="OperationModel" table="TB_OPERATIONS" lazy="true">
        <id name="id" column="ID">
            <generator class="increment"/>
        </id>
        <property name="date" type="timestamp" column="DATE"/>   
        
         
         <many-to-one name="operationTypeModel" 
         column="ID_OPERATION_TYPE" 
         class="OperationTypeModel"
         cascade="all"
         fetch="join"/> 
    </class>
</hibernate-mapping>